<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.baeckerit.jface.examples.databinding.portfolio.PmApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.baeckerit.jface.examples.databinding.portfolio.Perspective"
            fixed="false"
            id="de.baeckerit.jface.examples.databinding.portfolio.perspective"
            name="Main Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Securities View"
            class="de.baeckerit.jface.examples.databinding.portfolio.view.securities.SecuritiesViewPart"
            id="de.baeckerit.jface.examples.databinding.portfolio.view.securities">
      </view>
      <view
            name="Open Positions"
            class="de.baeckerit.jface.examples.databinding.portfolio.view.positions.OpenPositionsViewPart"
            id="de.baeckerit.jface.examples.databinding.portfolio.view.positions.open">
      </view>
      <view
            name="Closed Positions"
            class="de.baeckerit.jface.examples.databinding.portfolio.view.positions.ClosedPositionsViewPart"
            id="de.baeckerit.jface.examples.databinding.portfolio.view.positions.closed">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.baeckerit.jface.examples.databinding.portfolio.perspective">
         <newWizardShortcut
               id="de.baeckerit.jface.examples.databinding.portfolio.wizard.newSecurity">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.baeckerit.jface.examples.databinding.portfolio.newWizards.securities"
            name="Securities">
      </category>
      <category
            id="de.baeckerit.jface.examples.databinding.portfolio.newWizards.positions"
            name="Positions">
      </category>
      <wizard
            canFinishEarly="false"
            category="de.baeckerit.jface.examples.databinding.portfolio.newWizards.securities"
            class="de.baeckerit.jface.examples.databinding.portfolio.wizard.newsecurity.NewSecurityWizard"
            id="de.baeckerit.jface.examples.databinding.portfolio.wizard.newSecurity"
            name="Security">
         <description>
            Create a new Security
         </description>
      </wizard>
      <wizard
            canFinishEarly="false"
            category="de.baeckerit.jface.examples.databinding.portfolio.newWizards.positions"
            class="de.baeckerit.jface.examples.databinding.portfolio.wizard.newposition.NewPositionWizard"
            id="de.baeckerit.jface.examples.databinding.portfolio.wizard.newPosition"
            name="Position">
         <description>
            Create a new Position in a Security
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.ui.internal.handlers.WizardHandler$New"
            commandId="org.eclipse.ui.newWizard">
      </handler>
   </extension>
</plugin>
